{
  "buildCommand": "npm install --legacy-peer-deps && npm run vercel-build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["sin1"],
  "env": {
    "NEXTAUTH_URL": "https://sistem-piutang.vercel.app",
    "NEXTAUTH_SECRET": "your-nextauth-secret-here"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE_DATAPROXY": "true"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
